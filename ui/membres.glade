<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  
  <!-- Fen√™tre de gestion des membres -->
  <object class="GtkDialog" id="membres_dialog">
    <property name="can-focus">False</property>
    <property name="title">Gestion des Membres</property>
    <property name="window-position">center</property>
    <property name="default-width">900</property>
    <property name="default-height">600</property>
    <property name="type-hint">dialog</property>
    
    <child internal-child="vbox">
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <property name="margin">10</property>
        
        <!-- Barre de titre -->
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="orientation">horizontal</property>
            <property name="spacing">10</property>
            <child>
              <object class="GtkLabel">
                <property name="visible">True</property>
                <property name="label">üë• Gestion des Membres</property>
                <property name="xalign">0</property>
                <attributes>
                  <attribute name="weight" value="bold"/>
                  <attribute name="size" value="16000"/>
                </attributes>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
              </packing>
            </child>
          </object>
        </child>
        
        <!-- Barre de recherche et actions -->
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="orientation">horizontal</property>
            <property name="spacing">5</property>
            <child>
              <object class="GtkSearchEntry" id="membres_search">
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <property name="placeholder-text">Rechercher par nom, email...</property>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
              </packing>
            </child>
            <child>
              <object class="GtkButton" id="btn_membres_add">
                <property name="label">‚ûï Ajouter</property>
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <signal name="clicked" handler="on_membres_add"/>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_membres_edit">
                <property name="label">‚úèÔ∏è Modifier</property>
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <signal name="clicked" handler="on_membres_edit"/>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_membres_delete">
                <property name="label">üóëÔ∏è Supprimer</property>
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <signal name="clicked" handler="on_membres_delete"/>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_membres_refresh">
                <property name="label">üîÑ Actualiser</property>
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <signal name="clicked" handler="on_membres_refresh"/>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Liste des membres -->
        <child>
          <object class="GtkScrolledWindow">
            <property name="visible">True</property>
            <property name="can-focus">True</property>
            <property name="shadow-type">in</property>
            <property name="vexpand">True</property>
            <child>
              <object class="GtkTreeView" id="membres_treeview">
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <property name="model">membres_liststore</property>
                <child internal-child="selection">
                  <object class="GtkTreeSelection"/>
                </child>
                
                <!-- Colonnes -->
                <child>
                  <object class="GtkTreeViewColumn">
                    <property name="title">ID</property>
                    <property name="resizable">True</property>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">0</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkTreeViewColumn">
                    <property name="title">Nom</property>
                    <property name="resizable">True</property>
                    <property name="expand">True</property>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">1</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkTreeViewColumn">
                    <property name="title">Pr√©nom</property>
                    <property name="resizable">True</property>
                    <property name="expand">True</property>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">2</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkTreeViewColumn">
                    <property name="title">Email</property>
                    <property name="resizable">True</property>
                    <property name="expand">True</property>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">3</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkTreeViewColumn">
                    <property name="title">T√©l√©phone</property>
                    <property name="resizable">True</property>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">4</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkTreeViewColumn">
                    <property name="title">Date Inscription</property>
                    <property name="resizable">True</property>
                    <child>
                      <object class="GtkCellRendererText"/>
                      <attributes>
                        <attribute name="text">5</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkTreeViewColumn">
                    <property name="title">Actif</property>
                    <property name="resizable">True</property>
                    <child>
                      <object class="GtkCellRendererToggle"/>
                      <attributes>
                        <attribute name="active">6</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Statistiques -->
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="orientation">horizontal</property>
            <property name="spacing">20</property>
            <child>
              <object class="GtkLabel" id="lbl_membres_total">
                <property name="visible">True</property>
                <property name="label">Total: 0 membres</property>
                <attributes>
                  <attribute name="weight" value="bold"/>
                </attributes>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="lbl_membres_actifs">
                <property name="visible">True</property>
                <property name="label">Actifs: 0</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    
    <child internal-child="action_area">
      <object class="GtkButtonBox">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <child>
          <object class="GtkButton" id="btn_membres_close">
            <property name="label">Fermer</property>
            <property name="visible">True</property>
            <property name="can-focus">True</property>
            <property name="receives-default">True</property>
          </object>
        </child>
      </object>
    </child>
  </object>
  
  <!-- ListStore pour les membres -->
  <object class="GtkListStore" id="membres_liststore">
    <columns>
      <column type="gint"/>      <!-- ID -->
      <column type="gchararray"/> <!-- Nom -->
      <column type="gchararray"/> <!-- Pr√©nom -->
      <column type="gchararray"/> <!-- Email -->
      <column type="gchararray"/> <!-- T√©l√©phone -->
      <column type="gchararray"/> <!-- Date Inscription -->
      <column type="gboolean"/>   <!-- Actif -->
    </columns>
  </object>
</interface>
